<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#4DDA81"
    android:layout_gravity="center"
    android:gravity="center"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true">

    <ImageView
        android:id="@+id/image_toe"
        android:layout_width="252dp"
        android:layout_height="252dp"
        android:layout_gravity="center"
        android:layout_marginStart="79dp"
        android:layout_marginTop="202dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="205dp"
        android:foregroundGravity="center"
        android:src="@drawable/toe"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="76dp"
        android:layout_height="71dp"
        android:text="X"
        android:textColor="#000000"
        android:textSize="50sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/image_toe"
        app:layout_constraintEnd_toEndOf="@+id/image_toe"
        app:layout_constraintHorizontal_bias="0.602"
        app:layout_constraintStart_toStartOf="@+id/image_toe"
        app:layout_constraintTop_toTopOf="@+id/image_toe"
        app:layout_constraintVertical_bias="0.513" />
</android.support.constraint.ConstraintLayout>